<h1>Log in here:</h1>

<form method="post" action="/sessions">

  <div>
    <p>
      <label for="email">Email:</label>
      <input type="text" name="email">
    </p>
  </div>

  <div>
    <p>
      <label for="password">Password:</label>
      <input type="text" name="password">
    </p>
  </div>

  <div>
    <p>
      <input type="submit" value="Log In">
    </p>
  </div>

</form>


<h3><%= @error_message %></h3>
